public class ISBNChecker{
    public static string ISBNChecker (string s){
        if (s.length () != 10){
            System.out.println ("The string is not valid.");
        }
        else {
            int x = s.charAt(0);
            for (s.length >0 && s.length < 9; s.length++)
                x =+ s.charAt(s.length)*s.length;
            if (x%11 == 10 && s.charAt(9) != X || x%11 != s.charAt(9))
                System.out.println ("The string is false.");
            else if (x%11 == s.charAt9)
                System.out.println ("The string is a good string.");
        }
    }
                             
    public static void main (string[] args) {
        string a = 0205080057;
        string b = 0136091812;
        string c = 123456789X;
        ISBNChecker (a);
        ISBNChecker (b);
        ISBNChecker (c);
    }
}
                                     
                             
                     
